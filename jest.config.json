{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/index.js"
  ],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "moduleFileExtensions": ["js", "json"],
  "testTimeout": 15000,
  "detectOpenHandles": true,
  "maxWorkers": 1
}
